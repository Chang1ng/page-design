.header
    background-color: #0c1a44
    position: relative
    z-index: 1000
    padding: 0 10px

.header ul
    list-style: none

.header-inner
    max-width: 1000px
    margin: 0 auto
    padding: 10px 0

.header-flex
    display: flex
    align-items: center
    box-align: center
    box-lines: single
    box-orient: horizontal
    flex-align: center
    flex-flow: row nowrap

.header-logo
    box-flex: 1
    flex: 0 42px

.header-logo a
    display: block
    overflow: hidden
    width: 81px
    height: 42px
    white-space: nowrap
    font-size: 0
    cursor: pointer
    background: url(./img/logo-white.png)
    background-size: 100% 100%

.header-nav
    font-size: 14px
    line-height: 50px
    display: none
    padding-left: 20px
    box-flex: 1
    flex: 1 auto
    text-align: right

.header-nav-list > li
    position: relative
    display: inline-block
    padding: 0 10px

.header-nav-list > li > a
    position: relative
    display: block
    text-decoration: none
    color: rgba(255, 255, 255, 0.8)
    padding: 0 5px

.header-nav-list > li > a:hover,
.header-nav-list > li > .current
    color: #fff

@media screen and (min-width: 767px)
    .header-nav
        display: block

.header-mobile-nav-toggle
    display: none

@media screen and (max-width: 767px)
    .header-mobile-nav-toggle
        position: absolute
        top: 0
        bottom: 0
        right: 20px
        width: 25px
        height: 20px
        margin: auto
        opacity: .5
        transition: .2s
        cursor: pointer
        outline: none
        background-color: transparent
        border: none
        display: block

    .header-mobile-nav-toggle span
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 2px
        border-radius: 2px
        background: #fff
        transition: .4s
        transform-origin: 0

    .header-mobile-nav-toggle span:nth-child(2)
        top: 9px

    .header-mobile-nav-toggle span:nth-child(3)
        top: 18px

    .header-logo a
        width: 68px
        height: 33px

    .header-inner
        padding: 5px 0


