.mag-container {
    padding-bottom:51px;
    overflow-x:hidden;
}

.med-ask-btn {
    background-color: #02B7CA;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 10;
    color: #fff;
    font-size: 16px;
}

.med-img-content-img{
    border-radius: 50%;
}

.med-img-content{
    margin-top:20px;
}
button:active{
    background-color:#02b7ca;
}

/*公用颜色*/
.c-gray{
    color: #999;
    font: 14px/24px Arial, Helvetica, sans-serif;
}
.c-color{
    color: #555;
}
.c-color-gray{
    color: #999;
}
.c-text-box{
    display: inline-block;
    padding: 1px 2px;
    margin-bottom: 2px;
    text-decoration: none;
    vertical-align: middle;
    font-size: 10px;
    line-height: 11px;
    height: 10px;
    font-style: normal;
    font-weight: 400;
    overflow: hidden;
    -webkit-box-sizing: content-box;
    box-sizing: content-box;
    border-radius: 2px;
}
.c-text-box-yiliao {
    color: #01b7c9;
    border: 1px solid #01b7c9;
}
.c-color-yiliao{
    color:#01b7c9;
}
.align-direction {
    text-align:center;
}

.mip-showmore-btn {
    position: relative;
}


.show {
    display: none;
}

.hidden {
    display: block;
}

.mip-showmore-open .show {
    display: block;
}

.mip-showmore-open .hidden {
    display: none;
}